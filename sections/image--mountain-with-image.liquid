{{ 'section-image-with-text.min.css' | asset_url | stylesheet_tag }}



<section class="homepage-sections-wrapper  text-column-section mtn-with-img">
    <img class="mtn"  src="{{ section.settings.mtn | img_url: '1000x1000' }}"
    loading="lazy"}} style="background-color:transparent;" >
    <div class="container">
    	<div class="row">

        <div class="index-section col-md-12">
          <div class="page-width feature-row homepage-featured-content">

          	<div class="feature-row__container">
              <div >
            
                            <div class="column-groups">
                              <p class="first-time">{{section.settings.one}}</p>
                                <p class="second-time">{{section.settings.two}}</p>
                                  <p class="third-time">{{section.settings.three}}</p>
                                    <p class="four-time">{{section.settings.four}}</p>
                                      <p class="five-time">{{section.settings.five}}</p>
                                        <p class="six-time">{{section.settings.six}}</p>
                                          <p class="seven-time">{{section.settings.seven}}</p>
                               <img style="width:100%;" src="https://cdn.shopify.com/s/files/1/0552/0546/2188/files/MIW_timeline-min.gif?v=1664250940" >
                        </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>

