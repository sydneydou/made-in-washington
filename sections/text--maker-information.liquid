{{ 'section-image-with-text.min.css' | asset_url | stylesheet_tag }}

{% case section.settings.image-width %}
  {% when 'extra-small' %}
    {%- assign image_width_columns = 2 -%}
    {%- assign content_width_columns = 10 -%}
  {% when 'small' %}
    {%- assign image_width_columns = 3 -%}
    {%- assign content_width_columns = 9 -%}
  {% when 'medium' %}
    {%- assign image_width_columns = 4 -%}
    {%- assign content_width_columns = 8 -%}
  {% when 'large' %}
    {%- assign image_width_columns = 5 -%}
    {%- assign content_width_columns = 7 -%}
  {% when 'extra-large' %}
    {%- assign image_width_columns = 6 -%}
    {%- assign content_width_columns = 6 -%}
{% endcase %}

<section class="homepage-sections-wrapper image-with-text-home about-sides">

    <div class="container" >
    	<div class="row">

        <div class="index-section col-md-12">
          <div class="page-width feature-row homepage-featured-content">

          	<div class="feature-row__container">
              <div class="feature-row{% if section.settings.layout == 'right' %} feature-row--image-right{% endif %}">
                <div class="feature-row__image col-md-{{ image_width_columns }} col-12 wow">
                  {% if section.settings.image != blank %}
                    {% render 'responsive-image' with section.settings.image, alt: section.settings.image.alt %}
                  {% else %}
                    {{ 'image' | placeholder_svg_tag: 'icon--placeholder' }}
                  {% endif %}
                  {% if section.settings.image-logo != blank %}
                    <img class="img-logo" src="{{ section.settings.image-logo | img_url: 'master'}}">
                
                {% endif %}
                </div>

                <div class="feature-row__text col-md-{{ content_width_columns }} col-12 wow">
                  <div class="feature-row__text--inner">
                    {% if section.settings.title != blank or section.settings.subheading != blank %}
                      <div class="title-bar custom-font">
                        
                        {% if section.settings.title != blank %}
                        <h2  class="  wow">{{ section.settings.title | escape }}</h2>
                        <!-- <h1 style="font-size:2.2em;" class=" main-heading wow">{{ section.settings.title | escape }}</h1> -->
                      {% endif %}

                     

                    
                        {% if section.settings.subheading != blank %}
                          <h3 style="
                          margin-left: 0;
                          font-weight: 500; padding-bottom:1em;     font-size: 1.2em;
                      " class="sub type-subheading type-subheading--1 wow{% if section.settings.title != blank %} typography--padding-bottom{% endif %}">{{ section.settings.subheading | escape }}</h3>
                        {% endif %}


                        {% if section.settings.enable-scrolllink == true %}
                        <p  class="  wow"><a href="#CollectionFiltersForm"> View this Maker's products </a></h2>
                        <!-- <h1 style="font-size:2.2em;" class=" main-heading wow">{{ section.settings.title | escape }}</h1> -->
                      {% endif %}
                       
                      </div>
                     
                    {% endif %}


                    <!-- {%- assign color_name = color_split[0] -%} -->

                    {% if section.settings.text_block != blank %}
                   
                    {% assign prev = section.settings.text_block | truncate: 360 %}
                    <div class="min-text">
                      <p class="rte featured-row__subtext textarea sidesdiv ">{{ prev }}</p> 
                    </div>
                    <div class="full-text">
                      <p class="rte featured-row__subtext textarea sidesdiv ">{{ section.settings.text_block }}</p> 
                    </div>
                    
                    <a class="read-more-link makerlink">Read More</a>
                    <a class="read-less-link makerlink">Minimize Text</a>
                    {% endif %}

                    

                    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                      <a href="{{ section.settings.button_link }}" class="btn">
                        {{ section.settings.button_label }}
                      </a>
                    {% endif %}
                  </div>
                </div>
              </div>

<div class="full-wdth">
 
  {% if section.settings.text_block-con != blank %}
  <div class="rte featured-row__subtext textarea sidesdiv continued" >{{ section.settings.text_block-con }}</div>
  {% endif %}


</div>







</div>


            
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>

  <style>

.continued p{ 
  margin-bottom: 1.7em;
}

   #shopify-section-{{ section.id }} .image-with-text-home{
    padding-bottom: {{section.settings.bottom-padding}}em !important; 
    padding-top:6em !important;
}
@media only screen and (max-width: 997px){
.sub, .main-heading{
  margin: 0 auto !important;
  text-align:center;
}
}
.sidesdiv p{
  font-weight:500;
}

.read-less-link,  .full-text{
  display:none;
}

.makerlink{
  cursor:pointer;
}
  </style>

  <script>
    $(".read-more-link").click(function(){
      $(".full-text").show();
      $(".min-text").hide();
      $(".read-more-link").toggle();
      $(".read-less-link").show();
    })


    $(".read-less-link").click(function(){
      $(".full-text").hide();
      $(".min-text").show();
      $(".read-more-link").toggle();
      $(".read-less-link").hide();
      })
  </script>

